<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:layout_marginBottom="50dp"
    android:clickable="true"
    card_view:contentPaddingTop="1dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top">

        <RatingBar
            android:id="@+id/review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_title"

            android:max="5"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/item_content"
            android:text="Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/md_grey_800"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="asdada sdadasdasdasdasdadasda dasdasdasd adsasdasd asdasdasd asdasdasd asdasdasdadasdads asdasdasdasd"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/md_grey_700"
            android:textSize="16sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
