<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/customerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/browsePostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newAddressButton"
        android:layout_below="@+id/newAddressButton"
        android:layout_marginTop="57dp"
        android:onClick="toBrowsePost"
        android:text="To Browse Post" />

    <Button
        android:id="@+id/newAddressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/customerTextView"
        android:text="Create NEW CUSTOMER" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/browsePostBtn"
        android:layout_below="@+id/browsePostBtn"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="41dp"
        android:onClick="toLogin"
        android:text="To Login Page" />

</RelativeLayout>

