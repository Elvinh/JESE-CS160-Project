<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjsu.jese.parkhere.profile.ProfileViewFragment">


    <TextView
        android:id="@+id/screenNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/logoutLayout"
        android:layout_marginTop="56dp"
        android:text="Elton"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="35dp" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@+id/screenNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_top"
        android:id="@+id/logoutLayout">

        <TextView
            android:id="@+id/logOutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Log Out"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/logOutText"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_directions_walk_black_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myPostsLayout"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/logoutLayout"
        android:layout_below="@+id/logoutLayout"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_top">

        <TextView
            android:id="@+id/postsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="My Posts"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/postsText"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_chrome_reader_mode_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myReservationsLayout"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/myPostsLayout"
        android:layout_below="@+id/myPostsLayout"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_top">

        <TextView
            android:id="@+id/reservationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="My Reservations"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/reservationsText"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_chrome_reader_mode_black_24dp" />
    </RelativeLayout>
</RelativeLayout>
