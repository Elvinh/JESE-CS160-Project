<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjsu.jese.parkhere.newPost.NewPostGetDateFragment"
    android:id="@+id/getDate"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="When is your parking space available?"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <android.support.design.widget.TextInputLayout
    android:id="@+id/input_layout_start_date"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/questionText"
    android:layout_marginTop="30dp">

    <EditText
        android:id="@+id/startDateField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_layout_start_date"
        android:layout_alignEnd="@+id/input_layout_start_date"
        android:clickable="true"
        android:ems="10"
        android:hint="When will your parking space be available?"
        android:editable="false"
        android:text="12/15/17" />

</android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_end_date"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_start_time"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/endDateField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="When will your parking space be unavaiable?"
            android:editable="false"
            android:text="12/25/17" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_start_time"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_start_date"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/startTimeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_layout_start_date"
            android:layout_alignEnd="@+id/input_layout_start_date"
            android:clickable="true"
            android:ems="10"
            android:hint="At what time will it be available?"
            android:editable="false"
            android:text="7:00 am" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_end_time"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_end_date"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/endTimeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="At what time will it be unavaiable?"
            android:editable="false"
            android:text="6:30 pm" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/questionText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:text="Next" />

</RelativeLayout>
